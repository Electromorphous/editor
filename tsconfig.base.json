{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "strict": true,
    "moduleResolution": "node",
    "lib": ["es2019", "DOM"],
    "sourceMap": true,
    "outDir": "dist/cjs",
    "typeRoots": ["./node_modules/@types", "./types"],
    "declaration": true,
    "skipLibCheck": true
  }
}
