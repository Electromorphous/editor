{
  "name": "prosemirror-codemark",
  "version": "0.4.0",
  "description": "Inline code mark for ProseMirror",
  "author": "Rowan Cockett <rowan@curvenote.com>",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "prosemirror",
    "code"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/curvenote/prosemirror-codemark.git"
  },
  "bugs": {
    "url": "https://github.com/curvenote/prosemirror-codemark/issues"
  },
  "homepage": "https://github.com/curvenote/prosemirror-codemark",
  "scripts": {
    "clean": "rimraf dist",
    "build:cjs": "tsc --project ./src/tsconfig.json",
    "build:esm": "tsc --project ./src/tsconfig.json --module ES2020 --outDir ./dist/esm",
    "build:css": "copyfiles -f src/codemark.css dist",
    "declarations": "tsc  --project ./src/tsconfig.json --declaration --emitDeclarationOnly --outDir dist/types",
    "build": "npm-run-all -l clean -p build:cjs build:esm build:css declarations",
    "build:demo": "yarn run clean && webpack --config webpack.js",
    "build:watch": "tsc --project ./src/tsconfig.json -w",
    "prepublishOnly": "yarn build",
    "start": "webpack serve --open --config webpack.js",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:clear": "jest --clearCache",
    "lint": "eslint \"src/**/*.ts\" -c .eslintrc.json",
    "lint:format": "prettier --check \"src/**/*.ts\"",
    "lint:format:fix": "prettier --write \"src/**/*.ts\""
  },
  "peerDependencies": {
    "prosemirror-inputrules": "^1.2.0",
    "prosemirror-model": "^1.18.1",
    "prosemirror-state": "^1.4.1",
    "prosemirror-view": "^1.26.2"
  },
  "devDependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.17.12",
    "@types/jest": "^28.1.3",
    "@types/prosemirror-schema-basic": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "copyfiles": "^2.4.1",
    "css-loader": "^6.7.1",
    "eslint": "^8.18.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-no-skip-tests": "^1.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^28.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "prosemirror-example-setup": "^1.2.1",
    "prosemirror-inputrules": "^1.2.0",
    "prosemirror-model": "^1.18.1",
    "prosemirror-schema-basic": "^1.2.0",
    "prosemirror-state": "^1.4.1",
    "prosemirror-view": "^1.26.2",
    "style-loader": "^3.3.1",
    "ts-jest": "^28.0.5",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.9.2"
  }
}
